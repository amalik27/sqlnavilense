CREATE TABLE stops (
  stop_id INT,
  on_street VARCHAR(255),
  at_street VARCHAR(255),
  street_direction VARCHAR(255),
  stop_type VARCHAR(255),
  stop_status_description VARCHAR(255),
  municipality_name VARCHAR(255),
  county_name VARCHAR(255),
  bus_stop_description VARCHAR(255),
  state VARCHAR(255),
  distance DECIMAL(10, 2),
  mid_blk_direction VARCHAR(255),
  location VARCHAR(255),
  stop_category VARCHAR(255),
  sign_A VARCHAR(255),
  sign_A1 VARCHAR(255),
  Sign_B VARCHAR(255),
  rid_6_lines VARCHAR(255),
  rid_17_lines VARCHAR(255),
  poles INT,
  prolongation VARCHAR(255),
  mybus_sign VARCHAR(255),
  trash_cans INT,
  benches INT,
  num_shelter INT,
  shelter_removed VARCHAR(255),
  shelter_type VARCHAR(255),
  sign_id INT 
);


CREATE TABLE signs
(

  sign_id                   INT unsigned NOT NULL,            
  stop_id                   INT unsigned NOT NULL,             
  Planned_Date              DATE,                              
  Planned_Time              TIME,                             
  Actual_Date               DATE,                             
  Actual_Time               TIME,                             
  Install_Status            BIT(1) DEFAULT 0,                 
  Install_Check             BIT(1) DEFAULT 0,                  
  Navilens_Code            	BLOB,                           
  Navilens_Link             VARCHAR(150),                     
  Times_Scanned_Navilens    INT unsigned DEFAULT 0,           
  Times_Scanned_NavilensGO  INT unsigned DEFAULT 0,           
  Sign_Lat                  DECIMAL(9,6),               
  Sign_Long                 DECIMAL(9,6),              
  Sign_Muni                 VARCHAR(150) NOT NULL,            
  Sign_County               VARCHAR(150) NOT NULL,             
  Assigned                  BIT(1) DEFAULT 0,                 
  Worker_ID                 INT unsigned,                     
  Worker_Name               VARCHAR(150),                     
  Sign_Pic                  BLOB,                            
  Sign_Notes                VARCHAR(255)
);
CREATE TABLE installation_detail

(

  stop_id   INT unsigned NOT NULL,           
  work_order INT unsigned NOT NULL,         
  date_assigned  DATE,                                           
  time_assigned  TIME,                                             
  date_completed  DATE,                                       
  time_completed  TIME,                                         
  completed_flag  BOOLEAN,                                 
  Photo   BLOB                                   

);
CREATE TABLE people
(
  Person_ID                 INT unsigned NOT NULL,            
  Person_Name               VARCHAR(70) NOT NULL,            
  Person_Role               VARCHAR(150) NOT NULL,            
  Person_Phone              VARCHAR(11) NOT NULL,                  
  Person_Email              VARCHAR(150) NOT NULL,           
  Person_Supervisor_ID      INT unsigned                      
);

 

CREATE TABLE work_order
(
  Work_Order_Number         INT unsigned NOT NULL,             
  Leader_ID                 INT unsigned NOT NULL,            
  Installer_ID              INT unsigned NOT NULL,            
  stop_num               INT unsigned NOT NULL,             
  sign_id                   INT unsigned NOT NULL,            
  DATE_CREATED              DATE                             
 );


